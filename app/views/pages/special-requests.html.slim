#formContent.modal.fade role="dialog"
  .modal-dialog.modal-lg
    /! Modal content
    .modal-content
      .presto-modal-header
        button.close data-dismiss="modal" type="button" X
      #modalContent.modal-body
        #service_form
          h2 Special Requests
          h3 Tell us about your office
          = form_tag create_request_path, method: 'post', multipart: true do
            /  Format of naming for text or number fields `fields[text][name of label]`,
            /  Format of naming for the file fields `fields[file][name of label]`
            /  Example `= file_field_tag 'fields[file][Upload office floor plan]', class: 'form-control'`
            .form-group
              = label_tag :describe, 'Describe the space you would like cleaned'
              = text_field_tag 'fields[text][Describe the space you would like cleaned]', nil, class: 'form-control'
            .form-group
              = label_tag :no_of_employees, 'No. of employees'
              = number_field_tag 'fields[text][No. of employees]', 0, class: 'form-control'
            .form-group
              = label_tag :size, 'Size in square feet'
              = number_field_tag 'fields[text][Size in square feet]', 0, class: 'form-control'
            .form-group
              = label_tag :no_of_rooms, 'No. of rooms'
              = number_field_tag 'fields[text][No. of rooms]', 0, class: 'form-control'
            .form-group
              = label_tag :floor_type, 'Office space flooring type'
              = text_field_tag 'fields[text][Office space flooring type]', nil, class: 'form-control'
            .form-group
              = label_tag :floor, 'Upload office floor plan'
              = file_field_tag 'fields[file][Upload office floor plan]', class: 'form-control'
            .form-group
              = label_tag :date, 'Preferred service date'
              = date_field_tag 'fields[text][Preferred service date]', Date.today, class: 'form-control'
            = submit_tag 'Request', class: 'btn btn-default'