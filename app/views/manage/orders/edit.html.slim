.col-md-12
  h1 Review #{@order.order_or_quotation_text}
  .panel.panel-default
    .panel-heading #{@order.order_or_quotation_text} ##{@order.number} â€• #{Spree.t("order_state.#{@order.state}").titleize}
    .panel-body
      .col-md-12
        .table-responsive
          table.table
            thead
              tr
                th
                th Product
                th Price
                th Quantity
                th Total Price
            tbody
              - @order.line_items.each do |line_item|
                tr
                  td = mini_image(line_item.variant)
                  td = line_item.name
                  td = line_item.single_money.to_html
                  td = line_item.quantity
                  td = line_item.display_amount.to_html
    .panel-footer
      ' #{@order.order_or_quotation_text} Total:
      strong #{@order.display_total}
  - if @order.state.eql? 'awaiting_approval'
    = link_to "Reject #{@order.order_or_quotation_text}", reject_manage_order_path(order_id: @order.number), method: :post, class: 'btn btn-danger'
    = link_to "Approve #{@order.order_or_quotation_text}", approve_manage_order_path(order_id: @order.number), method: :post, class: 'btn btn-success pull-right'
