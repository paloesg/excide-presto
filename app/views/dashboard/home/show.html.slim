.col-md-12
  h1 Order Awaiting Approval
  .panel.panel-default
    .panel-heading Order Listing
    .panel-body
      .table-responsive
        table.table.table-striped
          thead
            tr
              th Number
              th Email
              th Total
              th Date Requested
              th Approved
          tbody
            - @orders.each do |o|
              tr
                td #{o.number}
                td #{o.email}
                td #{o.total}
                td #{o.completed_at}
                td #{o.approved_at}