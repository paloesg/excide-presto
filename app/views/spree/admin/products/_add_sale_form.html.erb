
<div class="panel-heading">
<h1 class="panel-title">
  <%= Spree.t(:add_product_sale) %>
</h1>
</div>
<div class="panel-body">
<%= form_for Spree::ProductSale.new, url: admin_sale_index_path, method: "POST"  do %>
  <div data-hook="admin_product_sale_form_fields" class="row">
    <div class="col-xs-12 col-md-6">
      <div class="form-group">
        <%= label_tag :sale_price, Spree.t(:sale_price) %>
        <%= number_field_tag :sale_price, nil, class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= label_tag :start_date, Spree.t(:sale_start_date) %>
        <%= date_field_tag :start_date, nil, class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= label_tag :end_date, Spree.t(:sale_end_date) %>
        <%= date_field_tag :end_date, nil, class: 'form-control'%>
      </div>
    </div>

    <div class="col-xs-12 col-md-6">
      <div class="form-group">
        <%= label_tag :description, Spree.t(:description) %>
        <%= text_field_tag :description, nil, class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= label_tag 'variant_id', Spree.t(:variant) %>
        <%= select_tag 'variant_id', options_from_collection_for_select(@variants, :id, :sku_and_options_text),
          class: 'select2' %>
      </div>
      <div class="form-group">
        <%= label_tag 'store_id', Spree.t(:store) %>
        <%= select_tag 'store_id', options_from_collection_for_select(@product.stores, :id, :name ),
          class: 'select2' %>
      </div>
    </div>
  </div>

  <div class="form-actions text-center" data-hook="buttons">
    <%= button Spree.t(:add_product_sale), 'plus' %>
  </div>
<% end %>
</div>