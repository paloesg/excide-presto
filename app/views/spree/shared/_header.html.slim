#presto-header.nav-container
  a#top
  nav data-fixed-at="50px"
    .nav-bar
      .module.left
        a href="/"
          = image_tag 'img/logo-light.png', class: 'logo logo-light', alt: 'Foundry'
          = image_tag 'img/logo-dark.png', class: 'logo logo-dark', alt: 'Foundry'
      - unless params[:controller] == 'spree/user_sessions' or params[:controller] == 'spree/user_passwords' or params[:controller] == 'spree/user_registrations'
        / Hidden search bar
        .module.widget-handle.search-widget-handle.left.hidden
          = render partial: 'spree/shared/nav_search'
        .module.widget-handle.mobile-toggle.right.visible-sm.visible-xs
          i.ti-menu
        .module-group.right
          = render partial: 'spree/shared/main_nav_bar'
      - else
        = render partial: 'spree/user_sessions/header'